DFS를 사용해서 해결하려고 했지만 시간초과가 발생했다.

#include<iostream>
#include<limits.h>

using namespace std;
int N;
int arr[111111];
int result=INT_MAX;
int smaller(int x, int y){
  if(x<y){return x;}
  else return y;
}

void DFS(int cnt,int sum){
  if(cnt==N){
    int d=arr[0]-arr[1];
  for(int i=0;i<N-1;i++){
    if(arr[i]-arr[i+1]!=d){
      return;
    }
  }
      result=smaller(result,sum);return;
      }    
  
  DFS(cnt+1,sum);
  arr[cnt]++;
  DFS(cnt+1,sum+1);
  arr[cnt]-=2;
  DFS(cnt+1,sum+1);
  arr[cnt]++;;
}
int main(void){
  cin>>N;
  for(int i=0;i<N;i++){cin>>arr[i];}
  DFS(0,0);
  if(result==INT_MAX){cout<<-1;return 0;}
  cout<<result;
}
